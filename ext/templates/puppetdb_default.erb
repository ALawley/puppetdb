###########################################
# Init settings for <%= @name %>
###########################################

# Location of your Java binary (version 7 or higher)
<%- if @pe -%>
JAVA_BIN="<%= @java_bin %>"
<%- else -%>
if [ -f /usr/lib/jvm/java-7-openjdk-amd64/bin/java ]; then
	JAVA_BIN="/usr/lib/jvm/java-7-openjdk-amd64/bin/java"
elif [ -f /usr/lib/jvm/java-7-openjdk-i386/bin/java ]; then
	JAVA_BIN="/usr/lib/jvm/java-7-openjdk-i386/bin/java"
elif [ -f /usr/lib/jvm/jre-1.7.0/bin/java ]
	JAVA_BIN="/usr/lib/jvm/jre-1.7.0/bin/java"
else
	JAVA_BIN="/usr/bin/java"
fi
<%- end -%>
# Modify this if you'd like to change the memory allocation, enable JMX, etc
JAVA_ARGS="<%= @java_args || @default_java_args -%>"

# These normally shouldn't need to be edited if using OS packages
USER="<%= @name -%>"
INSTALL_DIR="<%= @install_dir || "/usr/share/puppetdb" -%>"
CONFIG="<%= @config_dir -%>"
